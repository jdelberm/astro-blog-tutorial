---
import "../styles/global.css";
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "Astroblog";
const posts = await Astro.glob("./posts/*.md");
---
<BaseLayout pageTitle={pageTitle}>
  <section class="card">
    <h2>Intro</h2>
    <p>
      This tutorial is an introduction to the Astro framework, which can
      easily work with react
    </p>
  </section>
  <section class="card">
    <h2>Current posts</h2>
    <p>
      Here is a list of the already published post that you can visit by
      clicking the hyperlink
    </p>
    <ul>
      {posts.map((post)=>(
        <li><a href={post.url}>{post.frontmatter.title}</a></li>
      ))}
    </ul>
  </section>
</BaseLayout>
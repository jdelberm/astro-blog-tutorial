---
import "../styles/global.css";
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "Astroblog";
---
<BaseLayout pageTitle={pageTitle}>
  <section class="card">
    <h2>Intro</h2>
    <p>
      This tutorial is an introduction to the Astro framework, which can
      easily work with react
    </p>
  </section>
  <section class="card">
    <h2>Current posts</h2>
    <p>
      Here is a list of the already published post that you can visit by
      clicking the hyperlink
    </p>
    <ul>
      <li><a href="/posts/post-1">Post 1</a></li>
      <li><a href="/posts/post-2/">Post 2</a></li>
      <li><a href="/posts/post-3/">Post 3</a></li>
    </ul>
  </section>
</BaseLayout>
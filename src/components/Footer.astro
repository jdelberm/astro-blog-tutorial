---
import "../styles/global.css";
import Social from "./Social.astro";

const contactInfo = [
  {
    url: "https://es.linkedin.com/in/juan-de-dios-delgado-berm%C3%BAdez-4a2b90160",
    title: "Linkedin",
    svgIcon: "linkedin",
  },
  {
    url: "https://github.com/jdelberm",
    title: "Github",
    svgIcon: "github",
  },
  {
    url: "mailto:jdelgado.berm@gmail.com",
    title: "Mail",
    svgIcon: "mail",
  },
];
---

<head>
  <style>
    #page-footer {
      text-align: center;
    }

    #contact-info {
      display: flex;
      flex-direction: row;
      justify-content: space-evenly;
    }
  </style>
</head>
<body>
  <footer id="page-footer">
    <p>Learn more about me on...</p>
    <div id="contact-info">
      {contactInfo.map((info) => <Social url={info.url} title={info.title} />)}
    </div>
  </footer>
</body>

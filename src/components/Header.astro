---
import Navigation from "./Navigation.astro";
import Hamburger from "./Hamburger.astro";
import ThemeIcon from "./ThemeIcon.astro";

const pages = [
  {
    url: "/",
    title: "Home page",
  },
  {
    url: "/about/",
    title: "About",
  },
  {
    url: "/blog/",
    title: "Blog",
  },
  {
    url: "/tags/",
    title: "Tags",
  },
];
const currentPath = new URL(Astro.request.url).pathname;
---

<style>
  .header-nav {
    margin: 0;
  }

  .header-icons {
    display: flex;
    flex-direction: row;
    padding: 1rem;
    align-items: center;
  }
</style>
<header>
  <nav class="header-nav">
    <span class="header-icons">
      <ThemeIcon />
      <Hamburger />
      <span style="margin: 0 auto;">
        <h1 class="title-mobile page-title">
          {pages.find((x) => x.url == currentPath).title}
        </h1>
      </span>
    </span>
    <Navigation />
  </nav>
</header>

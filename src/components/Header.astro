---
import Navigation from "./Navigation.astro";
import Hamburger from "./Hamburger.astro";
import ThemeIcon from "./ThemeIcon.astro";
---

<style>
  .header-nav {
    margin: 0;
  }

  .header-icons {
    display: flex;
    flex-direction: row;
    padding: 1rem;
  }
</style>
<header>
  <nav class="header-nav">
    <span class="header-icons">
      <ThemeIcon />
      <Hamburger />
    </span>
    <Navigation />
  </nav>
</header>

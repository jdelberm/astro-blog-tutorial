---
const pages = [
    {
        url: "/",
        title: "Home page"
    },
    {
        url: "/about/",
        title: "About"
    },
    {
        url: "/blog/",
        title: "Blog"
    },
]
const currentPath = new URL(Astro.request.url).pathname;
---
<head>
    <style>
        #navbar{
            width 100%;
            padding: 1rem;
            display: flex;
            justify-content: space-evenly;
        }

        #navbar a{
            text-transform: uppercase;
            text-decoration: none;
            padding: 1rem;
        }
        .active{
            color: black;
            background-color: white;
            border-radius: 2rem;
        }

        #navbar a:hover{
            animation: highlight 500ms forwards;
        }

        @keyframes highlight{
            from{
                background-color: none;
                color: white;
                border-radius: 0.2rem;
            }
            to {
                color: black;
                background-color: white;
                border-radius: 2rem;
            }
        }
    </style>
</head>
<body>
    <nav id="navbar">
        {pages.map((page, index) =>(<a href={page.url} class={currentPath == page.url ? "active" : ""}>{page.title}</a>))}
    </nav>
    <hr>
</body>